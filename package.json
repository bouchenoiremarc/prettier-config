{
  "name": "@bouchenoiremarc/prettier-config",
  "version": "1.1.0",
  "description": "My personal Prettier configuration.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/prettier-config",
  "keywords": [
    "prettier",
    "config"
  ],
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "prettier": "./index.js",
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --ignore-path .eslintignore --write"
    ],
    "**/*.{json,md,yml}": [
      "prettier --ignore-path .eslintignore --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.js' --fix",
    "lint:prettier": "prettier '**/*.{js,json,md,yml}' --ignore-path .eslintignore --write --loglevel silent",
    "release": "yarn login && np --no-tests"
  },
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "4.3.8",
    "lint-staged": "^12.1.2",
    "np": "^7.6.0",
    "prettier": "^2.4.1"
  },
  "peerDependencies": {
    "prettier": ">=2.0.0"
  }
}
